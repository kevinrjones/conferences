<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico">
    @Styles.Render("~/bundles/less")
    @Styles.Render("~/bundles/content/bootstrap")
