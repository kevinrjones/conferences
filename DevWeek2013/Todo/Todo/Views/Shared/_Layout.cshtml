<body style="padding: 60px 0">
    <div class="container-fluid">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand">Todo</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active"><a href="#"><i class="icon-home icon-white"></i>Home</a></li>
                            <li data-bind="visible: user.isAuthenticated">@Html.ActionLink("Deregister", "Delete", "User", new { }, new { id = "deregister" })</li>
                            <li data-bind="visible: user.isAuthenticated">@Html.ActionLink("Logout", "Delete", "Session", new { }, new { id = "logout" })</li>
                            <li data-bind="visible: !user.isAuthenticated()">@Html.ActionLink("Login", "New", "Session", new { }, new { id = "login" })</li>
